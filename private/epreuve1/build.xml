<?xml version="1.0" encoding="UTF-8"?>
<project name="My Project" default="build" basedir=".">

    <target name="init" description="Create build folder and subfolders if required">
        <echo message="Creating Directories..." />
        <mkdir dir="workspace/build"/>
        <mkdir dir="workspace/build/testResults"/>
    </target>

    <target name="cleanup" description="Remove cruft generated from testing">
    <echo message="Cleaning up..." />
    <delete includeemptydirs="true" failonerror="false">
        <fileset dir="/tmp/node_modules/">
            <include name="**" />
        </fileset>
    </delete>
    <delete includeemptydirs="true" failonerror="false">
        <fileset dir="workspace/build/testResults">
            <include name="**" />
        </fileset>
    </delete>
    </target>

    <target name="overwrite_tests" description="make sure tests and libs havent been modified">
        <echo message="overwriting"/>
        <copy todir="workspace/test" overwrite="true">
            <fileset dir="/Users/benjamingarrigues/Documents/SimpleApp/code/bemyapp/codecontest/private/epreuve1/test"/>
        </copy>
    </target>

    <target name="mocha-jenkins" description="Test framework">
        
        <echo message="Installing Deps ..." />

        <exec executable="npm" dir="workspace" failonerror="true">
            <env key="NODE_PATH" value="/tmp/node_modules/" />
                <arg value="install" />
            </exec>
        <echo message="Running the tests ..." />
    <exec executable="mocha"  dir="workspace/test" output="workspace/build/testResults/mocha.xml" failonerror="true">
        <env key="NODE_PATH" value="/tmp/node_modules/" />
            <arg value="--reporter" />
            <arg value="xunit" />
        </exec>
        <echo message="Tests done" />
    </target>

    <target name="jenkins" depends="cleanup,init,overwrite_tests,mocha-jenkins" />
</project>